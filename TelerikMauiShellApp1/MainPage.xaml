<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             x:Class="TelerikMauiShellApp1.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25" 
            Padding="30,0" 
            VerticalOptions="Center">

            <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="185"
                HorizontalOptions="Center" />

            <Label
                Text="Hello, World!"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="Welcome to Telerik UI for .NET MAUI"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to Telerik UI for dot net Multi platform App U I"
                FontSize="18"
                HorizontalOptions="Center" />

            <telerik:RadToggleButton
                x:Name="ToggleBtn"
                Content="Toggled 1 time"
                IsThreeState="False"
                IsToggled="True"
                Clicked="OnToggleButtonClicked"
                HorizontalOptions="{OnPlatform Default=Center, Android=Fill, iOS=Fill}"
                WidthRequest="{OnPlatform MacCatalyst=300, WinUI=300}" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
